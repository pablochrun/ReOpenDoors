<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/loginScreenBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginBottom="5dp"
        android:background="@color/doorScreenText"
        >
        <TextView
            android:id="@+id/textScreenUpper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"

            android:textSize="10sp"
            android:text="@string/upperMessage"
            android:textColor="@color/game_2_password_screen_text_color"
            />

        <TextView
            android:id="@+id/textScreenPass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/game_2_password_screen_text_color"
            android:hint="@string/codeMuga"
            android:textColorHint="@color/game_2_password_screen_text_color"
            android:gravity="bottom|left"
            android:textSize="30sp"
            />



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        >

        <GridView
            android:id="@+id/gridView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="3"
            android:layout_centerInParent="true"
            >

        </GridView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imageKnifeGame2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/knife"/>

    </RelativeLayout>



</LinearLayout>
