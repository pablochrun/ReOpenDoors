<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/colorErrorLogin" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
            <gradient
                android:startColor="@color/toast_gradient_start"
                android:endColor="@color/toast_gradient_end"
                android:angle="-90"/>
        </shape>
    </item>
    <item
        android:drawable="@drawable/send"
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp"
        android:width="25dp"
        android:height="25dp"
        android:gravity="center">
    </item>
</layer-list>